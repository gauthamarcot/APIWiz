<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>org.arcot.APIWiz</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>APIWiz</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="gouthamarcot@gmail.com" url="http://arcodgoutham.com">Goutham Arcot</vendor>

    <description>
        A powerful API testing tool integrated into your IDE. Features include:
        - Send HTTP requests with custom headers and body
        - Import API definitions from Swagger/OpenAPI
        - Scan Flask APIs automatically
        - View response headers and body
        - Save and organize API endpoints
    </description>

    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.arcot.apiwiz.services.HttpService"/>
        <applicationService serviceImplementation="org.arcot.apiwiz.services.SwaggerService"/>
        <toolWindow id="APIWiz" anchor="right" factoryClass="org.arcot.apiwiz.toolWindow.HttpToolWindowFactory"/>
    </extensions>

    <actions>
        <action id="APIWiz.Action" class="org.arcot.apiwiz.actions.HttpAction" text="Open APIWiz" description="Open the APIWiz tool window">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>